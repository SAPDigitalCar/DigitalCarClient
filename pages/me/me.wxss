page {
  width: 100%;
  height: 100%;
  background-color: #efeff4;
}

.userinfo{
  position: relative;
  width: 100%;
  height: 300rpx;
  background: #445E7F;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.userinfo-personalinfo {
  display: flex;
  flex-flow: row;
  align-items: center;
}

.userinfo-personalinfo .userinfo-nickname {
  font-size: 40rpx;
  color: #ffffff;
}

.userinfo-personalinfo .userinfo-gender {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.editUserInfo {
 color: #303030;
 font-size: 24rpx;
}

.navIcon {
  margin-right: 18rpx;
