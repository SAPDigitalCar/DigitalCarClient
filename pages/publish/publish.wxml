<!--pages/publish/publish.wxml-->
<view class="page">
  <form bindsubmit="onSubmit" bindreset="onReset">
    <view class="weui-cells__title">
      <!-- Time -->
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">
            <i-icon type="clock" size="28" color="#80848f" />
          </view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="multiSelector" name="startDateTime" value="{{startDateTime}}" bindchange="changeSartDateTimeVal" bindcolumnchange="changeStartDateTimeColumn" range="{{dateTimeArray}}">
            <view class="weui-input">{{dateTimeArray[0][startDateTime[0]]}}-{{dateTimeArray[1][startDateTime[1]]}}-{{dateTimeArray[2][startDateTime[2]]}} {{dateTimeArray[3][startDateTime[3]]}}:{{dateTimeArray[4][startDateTime[4]]}}
            </view>
          </picker>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">
      <!-- load limit -->
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">
            <i-icon type="group" size="28" color="#80848f" />
          </view>
        </view>
        <view class="weui-cell__bd">
          <picker name="seatCount" bindchange="bindLoadlimitChange" value="{{loadlimitIndex}}" range="{{loadlimitRange}}">
            <view class="weui-select weui-select_in-select-after">{{loadlimitRange[loadlimitIndex]}} Seats</view>
          </picker>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">
      <!-- Price -->
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">
            <i-icon type="barrage" size="28" color="#80848f" />
          </view>
        </view>
        <view class="weui-cell__bd">
          <picker name="price" bindchange="bindPriceChange" value="{{pricesIndex}}" range="{{prices}}">
            <view class="weui-select weui-select_in-select-after">ï¿¥ {{prices[pricesIndex]}} / Person</view>
          </picker>
        </view>
      </view>
    </view>

   <!-- <block wx:if="{{items.length>0}}"> -->
    <view class="weui-cells__title">
      <!-- stop list -->
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">
            <i-icon type="coordinates" size="28" color="#80848f" />
          </view>
        </view>
        <view class="weui-cell__bd">
          <picker class="stop" mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
            <view class="weui-select weui-select_in-select-after">{{dest}}</view>
          </picker>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">
      <!-- gather places -->
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">
            <i-icon type="flag" size="28" color="#80848f" />
          </view>
        </view>
        <view class="weui-cell__bd">
          <picker name="venue" bindchange="bindVenuesChange" value="{{venuesIndex}}" range="{{venues}}">
            <view class="weui-select weui-select_in-select-after">{{venues[venuesIndex]}}</view>
          </picker>
        </view>
      </view>
    </view>
    <button class="publishbtn"form-type="submit">Publish</button>
  </form>
</view>