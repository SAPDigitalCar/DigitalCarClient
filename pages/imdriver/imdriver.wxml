          </view>
        </view>
        <view class="weui-cell__bd">
          <picker name="difficulty" bindchange="bindLoadlimitChange" value="{{loadlimitIndex}}" range="{{loadlimitRange}}">
            <view class="weui-select weui-select_in-select-after">{{loadlimitRange[loadlimitIndex]}}</view>
          </picker>
        </view>
      </view>
    </view>

