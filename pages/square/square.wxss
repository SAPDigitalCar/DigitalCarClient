/* pages/square/square.wxss */

page {
  width: 100%;
  height: 100%;
  position: relative;
}

/* page__bd {
  display: block;
} */

.background-image {
  height: 100%;
  position: fixed;
  width: 100%;
  left: 0px;
  top: 0px;
}

.weui-search-bar {
  border: none;
}

.weui-search-bar__cancel-btn{
  color: #ff9900;
}


.publish-btn {
  position: fixed;
  right: 36px;
  bottom: 15px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: #ff9900;
  box-shadow: 0 5px 10px #888;
}

.publish-btn::before {
  content: '+';
  position: absolute;
  top: -2px;
  left: 16px;
  color: #fff;
  font-size: 30px;
}