.infoLBL {
  margin: 40rpx;
  font-size: 1rem;
  font-weight: bold; 
  color: #444343
}

.ticketItem {
  display: flex;
  margin: 20rpx;
  height: 180rpx;
  border: 1px silver solid;
  background-color: #ffffff;
}

.leftContent, .rightContent {
  display: block;
}

.leftContent {
  margin: 0 6rpx 0 12rpx;
}

.rightContent {
  margin: 0 20rpx;
  padding: 10rpx 20rpx;
  flex: 1;
}

.leftLBL, .seats{
  color: #868383;
  font-size: 0.8rem;
}

.description {
  font-size: 0.9rem;
}

.leftLBL {
  margin: 10rpx 0 0 0;
}

.price {
  padding-top: 6rpx;
  font-size: 0.8rem;
  font-weight: bold;
  color: #444343;
}

.time{
  font-size: 2rem;
}




.publish-btn {
  position: fixed;
  right: 36px;
  bottom: 15px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: #445E7F;
  box-shadow: 0 5px 10px #888;
}

.publish-btn::before {
  content: '+';
  position: absolute;
  top: -2px;
  left: 16px;
  color: #fff;
  font-size: 30px;
}

