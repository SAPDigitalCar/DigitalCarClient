/* pages/square/square.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #EFEFF4;
}

.fromVal {
  padding-right: 30rpx;
  text-align: right
}
.toVal {
  text-align: right
}

/* .weui-cell_input {
