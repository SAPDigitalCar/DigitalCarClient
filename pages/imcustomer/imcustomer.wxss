/* @import 'weui.wxss'; */

page {
  width: 100%;
  height: 100%;
  background-color: #EFEFF4;
}

.weui-cell{
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 8rpx 30rpx;
}

.weui-label{
  margin-top: 4rpx;
  width: 100%;
}
.weui-input{
  height: 2em;
  min-height: 2em;
  line-height: 2em;
  width: 600rpx;
  text-overflow: ellipsis;
}

.weui-cell__bd {
  display: flex;
  flex: auto;
  justify-content: space-between;
}

.destination{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 0rpx;
}

.destination .left{
  display: flex;
  flex-direction: column;
}

.dest{
  font-size: 30rpx;
  color: rgb(82, 84, 87);
}

.destination .right{
  width: 50%;
}

.signUpButton{
  width: 100%;
  position: fixed;
  bottom: 4rpx; 
  background-color: #ffffff;  
  color: #445E7F;
}



